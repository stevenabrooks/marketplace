<p>
  <b>Name:</b>
  <%= @trainer.name %>
</p>

<p>
  <b>Email:</b>
  <%= @trainer.email %>
</p>

<% if @trainer.ratings %>
  <p>
    <b>Rating (out of 10):</b>
    <%= @trainer.average_rating %>
  </p>
<% end %>

<%= form_for (Rating.new) do |f| %>

  <div class="form-group">
    <%= f.hidden_field :trainer_id, :value => @trainer.id %>
  </div>
  <div class="form-group">
    <%= f.label :rating, "Rating between 1 and 10" %><br />
    <%= f.number_field :rating %>
  </div>
  <div class="form-group">
    <%= f.submit(:class => "btn btn-primary") %>
  </div>
<% end %>


<%= link_to 'Edit', edit_trainer_path(@trainer) %> |
<%= link_to 'Back', trainers_path %>